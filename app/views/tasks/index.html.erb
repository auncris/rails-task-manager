<h1>All of your pending Tasks:</h1>
<% @tasks.each do |task| %>
  <h2>  - <%= link_to task.name,  task_path(task) %></h3>
  <h4> <%= link_to "Remove Task", task_path(task),  method: :delete %> </h4>
  <h4> <%= link_to "Edit Task", edit_task_path(task) %> </h4>
<% end %>
  <h3> <%= link_to "Create new task", new_task_path(@task) %> </h3>








